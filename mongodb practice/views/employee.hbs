<form  method="POST" class='col-md-4 mx-auto my-5'>
    <label for="name">Name</label>
    <input type="text" class="form-control" name="username"  placeholder="Enter your Name">
    <label for="name">Email</label>
    <input type="email" class="form-control" name="email" placeholder="Enter your email">
    <button class="btn btn-info mt-2"> Submit</button>
</form>


<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <table class="table table-striped table-bordered">

                <thead>
                    <tr>
                        <th> Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>

                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td><button class="btn btn-warning"><a href="/edit/{{_id}}">Update</a></button></td>
                        <td><button class="btn btn-danger"><a href="/delete/{{_id}}">Delete</a></button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>



        </div>
    </div>
</div>
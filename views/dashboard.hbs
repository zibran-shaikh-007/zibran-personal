<div class="container">
    <div class="table-responsive " id="refreshdiv">
        <table class="table table-rounded " id="refreshtable">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Symbol</th>
                    <th class='d-none d-sm-table-cell' scope="col">Name</th>
                    <th class='d-none d-sm-table-cell' scope="col">Open Day</th>
                    <th scope="col">Current Price</th>
                    <th class='d-none d-sm-table-cell' scope="col">Market Cap</th>
                    <th scope="col">Chg. Hr</th>

                </tr>
            </thead>
            <tbody id="refresh">
                {{#each result }}
                <tr class="zoom">
                    <td>{{increment @index}}</td>
                    <td><img
                            src="https://www.cryptocompare.com/{{this.CoinInfo.ImageUrl}}?anchor=center&mode=crop&width=32&height=32"></img>
                        {{this.CoinInfo.Internal}}</td>
                    <td class='d-none d-sm-table-cell'>{{this.CoinInfo.FullName}} </td>
                    <td class='d-none d-sm-table-cell'>{{this.DISPLAY.USD.OPENDAY}}</td>
                    <td>{{this.DISPLAY.USD.PRICE}}</td>
                    <td class='d-none d-sm-table-cell'>{{this.DISPLAY.USD.MKTCAP}}</td>
                    <td>{{this.DISPLAY.USD.CHANGEHOUR}}</td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
